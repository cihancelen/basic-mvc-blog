
@{
    ViewBag.Title = "Yazarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using blog.Models
@model List<tblYazarlar>

<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header" data-background-color="purple">
            <h4 class="title">Yazarlar</h4>
            <p class="category">Bu tablodan yazalar ile ilgili işlemler yapabilirsiniz.</p>
        </div>
        <div class="card-content table-responsive">
            <table class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Kullanıcı Adı</th>
                    <th>E-posta</th>
                    <th>İşlemler</th>
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.YazarId</td>
                            <td>@item.Ad</td>
                            <td>@item.Soyad</td>
                            <td>@item.KullaniciAdi</td>
                            <td>@item.Email</td>
                            <td>
                                <button data-id="@item.YazarId" class="btn btn-danger btnSil btn-sm">Sil</button>
                                <button data-id="@item.YazarId" class="btn btn-warning btnUyeYap btn-sm">Üye Yap</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    <script>
        $(function () {

            $(".btnSil").click(function () {
                var id = $(this).data("id");
                $.ajax({
                    type: "POST",
                    url: "/Admin/UyeSil/" + id,
                    success: function () {
                        alert("başarılı");
                        window.location.reload();
                    }
                });
            });

            $(".btnUyeYap").click(function () {
                var id = $(this).data("id");
                $.ajax({
                    type: "POST",
                    url: "/Admin/UyeYap/" + id,
                    success: function () {
                        alert("onaylama başarılı");
                        window.location.reload();
                    }
                });
            });


        });
    </script>

}


