<!DOCTYPE html>
<html lang="en">
<head>
    <title>cihancelenn | Giriş Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Login_v4/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../Content/Login_v4/images/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form class="login100-form validate-form" action="/Uye/Giris" method="post">
                    <span class="login100-form-title p-b-49">
                        Giriş
                    </span>

                    <div class="wrap-input100 validate-input m-b-23" data-validate="Kullanıcı adı gerekli">
                        <span class="label-input100">Kullanıcı adı</span>
                        <input class="input100" type="text" name="username" placeholder="Kullanıcı adınızı giriniz">
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Parola gerekli">
                        <span class="label-input100">Parola</span>
                        <input class="input100" type="password" name="pass" placeholder="Parolanızı giriniz">
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>

                    <div class="text-right p-t-8 p-b-31">
                        <a href="~/Content/Login_v4/#">
                            Parolanızı mı  unuttunuz?
                        </a>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Giriş Yap
                            </button>
                        </div>
                    </div>

                    <div class="flex-col-c p-t-155">
                        <a href="/Uye/KayitOl" class="txt2">
                            Eğer üye değilseniz kayıt olun.
                        </a>
                        <a href="/Home" class="txt2">
                            Yada anasayfaya gitmek için tıklayın.
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Login_v4/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/Login_v4/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/vendor/countdowntime/countdowntime.js"></script>
    <!--SweetAlertJS-->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/js/main.js"></script>

    <script type="text/javascript">
        $(function () {
            @Html.Raw(ViewBag.Hata)
        });
    </script>

</body>
</html>